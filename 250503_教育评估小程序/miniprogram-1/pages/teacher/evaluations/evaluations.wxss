.container {
  padding: 20px;
}

.section {
  margin-bottom: 20px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.picker {
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 5px;
  border: 1px solid #ccc;
  font-size: 16px;
}

.content {
  width: 100%;
  min-height: 120px;
  max-height: 400px;
  border: 0px solid rgb(32, 31, 31);
  border-radius: 5px;
  padding: 5px;
  font-size: 16px;
  line-height: 1.5;
  background-color: #f9f9f9;
  box-sizing: border-box;
  overflow-y: auto; /* 允许内容溢出时滚动 */
}

.query-btn, .save-btn {
  background-color: #0054c1;
  color: white;
  padding: 10px;
  width: 100%;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  cursor: pointer;
}

.query-btn:hover, .save-btn:hover {
  background-color: #003c99;
}

.result {
  margin-top: 20px;
}
