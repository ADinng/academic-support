/* 页面整体容器 */
.container {
  padding: 24rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部标题蓝卡片 */
.header-card {
  background-color: #0054c1;
  color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.05);
}

/* 主标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 信息文本（会议主题、时间） */
.info text {
  display: block;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

/* 白色内容区块 */
.section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.05);
}

/* 表单标题 */
.form-label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
  display: block;
}

/* 多行文本输入框 */
.report-input {
  width: 100%;
  min-height: 500rpx;
  font-size: 300rpx;
  padding: 300rpx;
  background-color: #fafafa;
  border: 1rpx solid #dcdcdc;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/* 提交按钮容器 */
.submit-section {
  margin-bottom: 60rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background-color: #0054c1;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 40rpx;
  padding: 24rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
}
