<!--pages/my/bindEmail/bindEmail.wxml-->
<view class="modal-container">
    <view class="modal-content">
        <view class="modal-header">
            <text class="header-text">绑定邮箱</text>
        </view>
        <view class="modal-body">
            <view class="input-item">
                <label class="input-label">请输入邮箱号</label>
                <input class="input-field" type="email" placeholder="请输入邮箱号" bindinput="handleEmailInput"/>
            </view>
        </view>
        <view class="modal-footer">
            <button class="cancel-btn" bindtap="cancelBindEmail">取消</button>
            <button class="confirm-btn" bindtap="confirmBindEmail">确定</button>
        </view>
    </view>
</view>