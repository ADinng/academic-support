.container {
  background-color: #f8f8f8;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.header {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  cursor: pointer;
}

.user-info-wrapper {
  position: relative;
  flex: 1;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.student-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.student-id {
  font-size: 24rpx;
  color: #999;
}

.function-list {
  width: 100%;
  max-width: 680rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.function-item {
  padding: 20rpx;
  border-bottom: none;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.function-image {
  width: 32rpx;
  height: 32rpx;
}

.function-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
}

.logout-icon {
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
  position: absolute;
  top: -40rpx;
  right: 0;
}

/* 模态框样式调整 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background: white;
  border-radius: 10rpx; /* 恢复圆角 */
  padding: 30rpx;
  width: 500rpx; /* 调整宽度 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.modal-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-icon image {
  width: 60rpx;
  height: 60rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-message {
  font-size: 32rpx;
  color: #999; /* 文字颜色改为灰色 */
  margin-bottom: 30rpx;
}

.modal-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.modal-cancel {
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx; /* 恢复按钮圆角 */
  font-size: 32rpx;
  background: white;
}

.modal-confirm {
  width: 200rpx;
  height: 60rpx;
  border: none;
  border-radius: 10rpx; /* 恢复按钮圆角 */
  font-size: 32rpx;
  background: #FF4444;
  color: white;
}
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  