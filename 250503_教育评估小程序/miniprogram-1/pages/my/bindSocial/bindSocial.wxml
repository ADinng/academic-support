<view class="modal-container">
    <view class="modal-content">
        <view class="modal-header">
            <text class="header-text">绑定 QQ 或者微信</text>
        </view>
        <view class="modal-body">
            <view class="social-buttons">
                <button class="social-btn {{selectedSocial === 'qq' ? 'selected' : ''}}" bindtap="showQQInput">QQ</button>
                <button class="social-btn {{selectedSocial === 'wechat' ? 'selected' : ''}}" bindtap="showWechatInput">微信</button>
            </view>
            <view class="input-section" wx:if="{{showQQInput}}">
                <view class="input-item">
                    <label class="input-label">请输入 QQ 号</label>
                    <input class="input-field" type="number" placeholder="请输入 QQ 号" bindinput="handleQQInput"/>
                </view>
            </view>
            <view class="input-section" wx:if="{{showWechatInput}}">
                <view class="input-item">
                    <label class="input-label">请输入微信号</label>
                    <input class="input-field" type="text" placeholder="请输入微信号" bindinput="handleWechatInput"/>
                </view>
            </view>
        </view>
        <view class="modal-footer">
            <button class="cancel-btn" bindtap="cancelBindSocial">取消</button>
            <button class="confirm-btn" bindtap="confirmBindSocial">确定</button>
        </view>
    </view>
</view>