    <text class="chart-title">教学基础柱状图</text>
    <canvas canvas-id="barChart" class="chart"></canvas>
  </view>

  <view class="chart-card">
    <text class="chart-title">师资结构雷达图</text>
    <canvas canvas-id="radarChart" class="chart"></canvas>
  </view>

  <view class="chart-card">
    <text class="chart-title">专业对比柱状图</text>
    <canvas canvas-id="compareChart" class="chart"></canvas>
  </view>

  <view class="chart-card">
    <text class="chart-title">历年课程开设折线图</text>
    <canvas canvas-id="timelineChart" class="chart"></canvas>
  </view>
</scroll-view>
