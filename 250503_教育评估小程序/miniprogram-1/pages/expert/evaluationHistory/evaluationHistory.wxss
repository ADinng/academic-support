/* pages/expert/evaluationHistory/evaluationHistory.wxss */
.container {
  padding: 30rpx; /* 增加容器 padding */
  background-color: #f5f5f5;
  width: 100%;
  max-width: 750rpx; /* 设置最大宽度，适配不同设备 */
}

.title {
  font-size: 36rpx; /* 增加标题字体 */
  font-weight: bold;
  margin-top: 20rpx;
  text-align: center;
}

.description {
  font-size: 28rpx; /* 增加描述字体 */
  color: #666;
  text-align: center;
  margin-top: 12rpx;
}

.evaluation-list {
  margin-top: 30rpx;
}

.evaluation-item {
  background: #fff;
  padding: 24rpx; /* 增加内边距 */
  margin-bottom: 20rpx; /* 增加项之间的间距 */
  border-radius: 12rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}

.evaluation-course,
.evaluation-teacher,
.evaluation-profession,
.evaluation-campus,
.evaluation-classroom,
.evaluation-score,
.evaluation-issue {
  font-size: 30rpx; /* 增加字体大小 */
  color: #333;
  margin-bottom: 12rpx; /* 增加每个字段的间距 */
}

/* 强调分数字段 */
.evaluation-score {
  color: #FF5733; /* 设置颜色为醒目的红色 */
  font-weight: bold; /* 设置加粗 */
}

.evaluation-issue {
  color: #888; /* 设置问题字段颜色 */
  font-style: italic; /* 设置斜体 */
}
