/* pages/expert/qualityMonitor/qualityMonitor.wxss */
/* pages/expert/evaluationHistory/evaluationHistory.wxss */
.container {
  padding: 30rpx;
  background-color: #f9f9f9;
  width: 100%;
  max-width: 750rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 30rpx;
  text-align: center;
}

.description {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-top: 12rpx;
}

.class-list {
  margin-top: 30rpx;
}

.class-item {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.class-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #007acc;
  margin-bottom: 15rpx;
}

.evaluation-list {
  margin-top: 20rpx;
}

.evaluation-item {
  background: #f9f9f9;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.evaluation-student-name,
.evaluation-course,
.evaluation-grade,
.evaluation-attendance,
.evaluation-project,
.evaluation-feedback {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.evaluation-attendance {
  color: #ff9800;
  font-weight: bold;
}

.evaluation-project {
  color: #4caf50;
  font-weight: bold;
}

.evaluation-feedback {
  font-size: 26rpx;
  color: #888;
  font-style: italic;
}
