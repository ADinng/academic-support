.container {
  padding: 20rpx;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  margin-top: 100rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 80%; /* 和输入框宽度保持一致 */
  margin-bottom: 20rpx;
}

.button-group button {
  flex: 1; /* 让每个按钮平均分配宽度 */
  margin: 0 5rpx;
  padding: 10rpx 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  background-color: #fff;
}

.button-group button.active {
  background-color: #2F88FF;
  color: white;
}

.input-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-field {
  width: 80%;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.login-button {
  width: 80%;
  height: 60rpx;
  background-color: #2F88FF;
  color: white;
  font-size: 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error-message {
  color: red;
  font-size: 28rpx;
  margin-top: 20rpx;
}                                              
    
  
  
  
  
  
  
  
  
  
  
  
  
  