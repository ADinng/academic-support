<view class="container">
  <!-- 顶部标签栏 -->
  <view class="tab-switch">
    <view 
      class="tab-item {{questionType === 'campus' ? 'active' : ''}}" 
      bindtap="switchType" 
      data-type="campus">
      校园问卷
    </view>
    <view 
      class="tab-item {{questionType === 'psychology' ? 'active' : ''}}" 
      bindtap="switchType" 
      data-type="psychology">
      心理问卷
    </view>
  </view>

  <!-- 问题区域 -->
  <view class="question-box">
    <view class="question-number">第 {{currentQuestionIndex + 1}} 题 / 共 {{questions.length}} 题</view>
    <view class="question-title">{{questions[currentQuestionIndex].title}}</view> <!-- 显示题目 -->
    <radio-group bindchange="onAnswerChange">
      <label class="option" wx:for="{{questions[currentQuestionIndex].options}}" wx:key="index">
        <radio value="{{item}}" checked="{{item === questions[currentQuestionIndex].answer}}" />
        <text>{{item}}</text>
      </label>
    </radio-group>
  </view>

  <!-- 按钮 -->
  <view class="navigation-buttons">
    <button class="btn prev-btn" wx:if="{{currentQuestionIndex > 0}}" bindtap="prevQuestion">上一题</button>
    <button class="btn next-btn" wx:if="{{currentQuestionIndex < questions.length - 1}}" bindtap="nextQuestion">下一题</button>
    <button class="btn submit-btn" wx:if="{{currentQuestionIndex === questions.length - 1}}" bindtap="submitSurvey">提交问卷</button>
  </view>
</view>
