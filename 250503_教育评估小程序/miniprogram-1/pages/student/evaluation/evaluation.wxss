.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.picker-wrapper {
  margin-bottom: 20rpx;
  width: 100%;
}

.picker-item {
  padding: 10rpx;
  border: 1px solid #ccc;
  font-size: 18px;
  text-align: center;
}

button {
  padding: 10rpx;
  background-color: #1aad19;
  color: white;
  margin-top: 10rpx;
}

.teachers-list {
  margin-top: 20rpx;
}

.teacher-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  border: 1px solid #ccc;
  margin-bottom: 10rpx;
}

.teacher-item text {
  font-size: 16px;
}

.teacher-item button {
  background-color: #1aad19;
  color: white;
  border: none;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}