.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1px solid #e5e5e5;
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
}

.tab-text {
  font-size: 20rpx;
  margin-top: 5rpx;
  color: #666;
}
