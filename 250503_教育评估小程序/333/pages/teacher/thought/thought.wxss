/* pages/teacher/thought/thought.wxss */
/* 页面容器 */
.container {
  padding: 20px;
  background-color: #f7f7f7;
}

/* 标题 */
.title {
  text-align: center;
  margin-bottom: 20px;
}

.title-text {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

/* 思想列表 */
.ideas-list {
  margin-top: 20px;
}

.idea-item {
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.idea-content {
  display: flex;
  flex-direction: column;
}

.idea-title {
  font-size: 18px;
  font-weight: bold;
  color: #0054c1;
  margin-bottom: 10px;
}

.idea-description {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.view-more {
  background-color: #0054c1;
  color: white;
  padding: 8px;
  border-radius: 5px;
  font-size: 14px;
  text-align: center;
}

/* 弹框 */
.detail-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail-dialog-content {
  background-color: #fff;
  padding: 20px;
  width: 80%;
  border-radius: 10px;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.dialog-title {
  font-size: 20px;
  font-weight: bold;
  color: #0054c1;
  margin-bottom: 10px;
}

.dialog-description {
  font-size: 16px;
  color: #333;
  margin-bottom: 15px;
}

.dialog-resource {
  font-size: 14px;
  color: #888;
  margin-bottom: 20px;
}

.close-btn {
  background-color: #ff4d4f;
  color: white;
  padding: 8px 20px;
  border-radius: 5px;
  font-size: 14px;
}
