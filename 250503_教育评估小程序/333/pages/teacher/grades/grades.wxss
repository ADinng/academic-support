/* 页面整体容器 */
.container {
  padding: 20rpx;
  background-color: #f0f4f8; /* 使用浅灰色背景，使页面更柔和 */
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* 顶部标题蓝卡片 */
.header-card {
  background-color: #0047ab; /* 更深的蓝色，营造稳定感 */
  color: white;
  border-radius: 16rpx;  /* 圆角设为16，稍微减小圆角 */
  padding: 30rpx 24rpx;  /* 增加内边距，使得文字更居中 */
  margin-bottom: 30rpx;  /* 卡片和下方内容之间的间距适中 */
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.1);  /* 阴影更柔和，提升层次感 */
  width: 100%;
  max-width: 800rpx; /* 限制卡片最大宽度，避免在大屏设备上过宽 */
  text-align: center;  /* 标题和信息居中对齐 */
}

/* 主标题 */
.title {
  font-size: 36rpx; /* 适中的标题大小 */
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.4; /* 行高增加，增加阅读舒适度 */
}

/* 会议主题、时间 */
.info text {
  display: block;
  font-size: 28rpx;
  color: #dfe3e8;  /* 浅灰色文字，与蓝色卡片形成对比 */
  line-height: 1.6;
  margin-bottom: 8rpx;
}

/* 白色内容区块 */
.section {
  background-color: white;
  border-radius: 12rpx;  /* 圆角与顶部卡片一致 */
  padding: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);  /* 更柔和的阴影 */
  width: 100%;
  max-width: 800rpx; /* 限制内容区块的最大宽度 */
  margin-bottom: 30rpx;
}

/* 表单标题 */
.form-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;  /* 深色字体与背景有良好的对比 */
  margin-bottom: 12rpx;
  line-height: 1.5;
}

/* 多行文本输入框 */
.report-input {
  width: 100%;
  height: 300rpx; /* 限制高度，避免过高影响布局 */
  font-size: 30rpx;
  padding: 18rpx;
  background-color: #fafafa;  /* 淡灰色背景 */
  border: 1rpx solid #d0d0d0;  /* 浅灰色边框 */
  border-radius: 8rpx;  /* 圆角统一设计 */
  box-sizing: border-box;
  line-height: 1.5;  /* 增加行高，改善长文本的可读性 */
  resize: none; /* 禁止手动调整大小 */
  color: #333; /* 输入文字颜色 */
}

/* 提交按钮容器 */
.submit-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;  /* 按钮和输入框之间的间距 */
}

/* 提交按钮 */
.submit-btn {
  width: 80%;
  background-color: #0054c1;  /* 蓝色背景，和顶部卡片呼应 */
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
  padding: 18rpx 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);  /* 按钮阴影增强 */
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

/* 按钮点击效果 */
.submit-btn:active {
  transform: scale(0.98);  /* 按钮点击时轻微缩小，增加交互反馈 */
}

/* 提交按钮悬浮效果 */
.submit-btn:hover {
  background-color: #004094;  /* 按钮悬浮时改变背景色 */
}
