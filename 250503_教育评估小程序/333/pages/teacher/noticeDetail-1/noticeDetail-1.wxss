/* pages/teacher/noticeDetail/noticeDetail.wxss */

/* 整体页面容器 */
.container {
  padding: 20rpx;
  background-color: #ffffff;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题样式 */
.notice-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  color: #333333;
}

/* 时间样式 */
.notice-time {
  font-size: 26rpx;
  color: #888888;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 正文每一段 */
.notice-content {
  font-size: 30rpx;
  color: #444444;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 2em; /* 每段开头空两个字 */
}
