.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.picker-wrapper {
  margin-bottom: 20rpx;
  width: 100%;
}

.picker-item {
  padding: 15rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  font-size: 16px;
  text-align: center;
  background-color: #f9f9f9;
}

button {
  width: 80%;
  padding: 20rpx;
  background-color: #1aad19;
  color: white;
  margin: 30rpx 0;
  border-radius: 10rpx;
  font-size: 16px;
}

.courses-list {
  margin-top: 20rpx;
  width: 100%;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.course-info {
  display: flex;
  flex-direction: column;
}

.course-info text {
  margin-bottom: 10rpx;
  font-size: 16px;
}

.course-item button {
  width: auto;
  padding: 10rpx 20rpx;
  margin: 0;
  font-size: 14px;
}

.evaluation-result {
  margin-top: 30rpx;
  padding: 30rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  width: 100%;
}

.result-text {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.result-score {
  font-size: 24px;
  color: #1aad19;
  margin: 20rpx 0;
  text-align: center;
}

.malicious-score-prompt {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 16px;
}

.malicious-scores-list {
  width: 100%;
}