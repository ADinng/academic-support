/* pages/teacher/schedule/schedule.wxss */
.container {
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.semester {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #333;
}

.picker {
  font-size: 16px;
  background-color: #f0f0f0;
  padding: 10px;
  margin-top: 5px;
}

.course-info {
  margin-top: 20px;
}

.course {
  margin-bottom: 10px;
}

.schedule {
  margin-top: 20px;
}

.course-list {
  margin-top: 10px;
}

.course-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.course-name {
  font-size: 16px;
}

.course-time {
  font-size: 14px;
  color: #555;
}

.action-btn {
  margin-top: 30px;
  background-color: #0054c1;
  color: white;
  padding: 10px;
  width: 100%;
  font-size: 16px;
}
