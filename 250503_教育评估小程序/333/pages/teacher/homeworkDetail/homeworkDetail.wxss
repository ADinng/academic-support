.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}

.subject {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.content {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  line-height: 1.6;
}

.section-title {
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.attachments {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.attachment-item {
  margin-bottom: 15rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
}

.file-info {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.student-info {
  display: flex;
  flex-direction: column;
}

.student-info text:first-child {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.date {
  color: #666;
  font-size: 28rpx;
}