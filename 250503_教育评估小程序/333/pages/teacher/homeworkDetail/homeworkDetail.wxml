<view class="container">
  <!-- 作业主题 -->
  <view class="header">
    <text class="subject">{{homework.subject}}</text>
  </view>
  
  <!-- 学生信息和日期 -->
  <view class="info-row">
    <text class="student">{{homework.student}}</text>
    <text class="date">{{homework.date}}</text>
  </view>
  
  <!-- 专业和年级 -->
  <view class="info-row">
    <text>{{homework.major}} {{homework.grade}}</text>
  </view>
  
  <!-- 作业内容 -->
  <view class="content">
    <rich-text nodes="{{formattedContent}}"></rich-text>
  </view>
  
  <!-- 附件列表部分修改为 -->
<view class="attachments" wx:if="{{homework.attachments && homework.attachments.length}}">
  <text class="section-title">附件：</text>
  <view 
    wx:for="{{homework.attachments}}" 
    wx:key="name" 
    class="attachment-item" 
    bindtap="previewAttachment" 
    data-index="{{index}}"
  >
    <text>{{item.name}}</text>
    <text class="file-info">{{item.type}} ({{formatFileSize(item.size)}})</text>
  </view>
</view>
</view>