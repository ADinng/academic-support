/* pages/teacher/fundamention/fundamention.wxss */
/* 页面容器整体 */
.container {
  padding: 20rpx; /* 页面整体的内边距 */
  background-color: #f7f8fa; /* 页面背景颜色 */
  min-height: 100vh; /* 最小高度为视口高度，确保页面至少有屏幕的高度 */
  padding-bottom: 10vh;
}

.carousel {
  width: 100%; /* 确保轮播图宽度为100% */
  height: 400rpx; /* 设置一个固定的高度 */
}

.carousel-image {
  width: 100%; /* 图片宽度为100% */
  height: 100%; /* 图片高度为100% */
  object-fit: cover; /* 保证图片比例不失真 */
}

/* 功能区标题 */
.function-section {
  margin-top: 10rpx; /* 上方间距 */
}

/* 功能区标题样式 */
.section-title {
  padding: 20rpx; /* 页面整体的内边距 */
  margin-top: 20rpx; /* 上方间距 */
  font-size: 34rpx; /* 字体大小 */
  font-weight: 700; /* 加粗 */
  margin: 20rpx 0; /* 上下留白20rpx */
  color: #333; /* 字体颜色为深灰色 */
}

/* 功能网格 */
.function-grid {
  display: grid; /* 使用 grid 布局 */
  grid-template-columns: repeat(2, 2fr); /* 定义4列等宽的网格 */
  gap: 20rpx; /* 每个网格项之间的间距 */
}

/* 单个功能块 */
.function-item {
  background: #ffffff; /* 白色背景 */
  border-radius: 20rpx; /* 圆角效果 */
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05); /* 阴影效果 */
  display: flex; /* 使用 flex 布局排列图标和文本 */
  flex-direction: column; /* 子项垂直排列 */
  align-items: center; /* 居中对齐 */
  padding: 20rpx 10rpx; /* 内边距 */
  transition: all 0.3s ease; /* 添加过渡效果 */
  width: 100%; /* 确保宽度一致 */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 功能块点击时的缩放效果 */
.function-item:active {
  transform: scale(0.95); /* 点击时缩小 */
}

/* 功能图标 */
.function-icon {
  width: 80rpx; /* 图标宽度 */
  height: 80rpx; /* 图标高度 */
  margin-bottom: 12rpx; /* 图标和文本之间的间距 */
}

/* 功能块文本 */
.function-text {
  font-size: 24rpx; /* 字体大小 */
  color: #555; /* 字体颜色为灰色 */
  text-align: center; /* 文本居中 */
  word-break: break-word; /* 强制换行以避免文本溢出 */
  white-space: pre-line; /* 处理换行符 */
}

/* 通知Tabs */
.tabs {
  display: flex; /* 使用 flex 布局排列 Tab 项 */
  justify-content: space-around; /* 均匀分布 */
  margin: 20rpx 0; /* 上下留出间距 */
  background: #ffffff; /* 背景颜色为白色 */
  border-radius: 20rpx; /* 圆角效果 */
  padding: 10rpx 0; /* 上下内边距 */
  width: 100%; /* 设置宽度为100%，确保宽度一致 */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 单个通知Tab */
.tab {
  flex: 1; /* 让每个 Tab 平均分配空间 */
  text-align: center; /* 文字居中对齐 */
}

/* 通知Tab文本 */
.tab-text {
  font-size: 28rpx; /* 字体大小 */
  color: #666; /* 字体颜色为灰色 */
}

/* 激活状态的Tab文本 */
.tab-text.active {
  font-weight: bold; /* 加粗 */
  color: #0054c1; /* 激活状态的颜色 */
  border-bottom: 4rpx solid #0054c1; /* 激活状态下的底部边框 */
  padding-bottom: 8rpx; /* 底部留白 */
}

/* 通知列表 */
.notice-list {
  margin: 10rpx 0; /* 上下间距 */
  padding: 0; /* 去除内边距 */
  width: 100%; /* 统一宽度为100% */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 单个通知项 */
.notice-item {
  background: #ffffff; /* 背景为白色 */
  margin: 0; /* 取消左右的外边距，确保宽度一致 */
  padding: 20rpx; /* 内边距 */
  border-radius: 20rpx; /* 圆角效果 */
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05); /* 阴影效果 */
  width: 100%; /* 设置宽度为100%，确保宽度一致 */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 通知标题 */
.notice-title {
  font-size: 30rpx; /* 字体大小 */
  color: #333; /* 字体颜色 */
  margin-bottom: 5rpx; /* 下方留白 */
}

/* 通知时间 */
.notice-time {
  font-size: 24rpx; /* 字体大小 */
  color: #999; /* 字体颜色 */
}

/* 具体通知页面 */
.notice-detail {
  background: #ffffff; /* 背景为白色 */
  padding: 30rpx; /* 内边距 */
  border-radius: 20rpx; /* 圆角效果 */
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05); /* 阴影效果 */
  margin-top: 20rpx; /* 上方间距 */
  width: 100%; /* 设置宽度为100%，确保宽度一致 */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 教师信息卡片 */
.profile-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 0rpx;
  width: 100%; /* 设置宽度为100%，确保与其他卡片一致 */
  box-sizing: border-box; /* 包括内边距和边框在内计算宽度 */
}

/* 教师头像 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

/* 教师信息 */
.profile-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.teacher-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.teacher-detail {
  font-size: 26rpx;
  color: #888;
}

.title {
  white-space: pre-line; /* 支持换行 */
}
