<view class="container">
  <!-- 学年选择 -->
  <view class="section">
    <text class="title">学年：</text>
    <picker mode="selector" range="{{years}}" bindchange="onYearChange">
      <view class="picker">{{year}}</view>
    </picker>
  </view>

  <!-- 学期选择 -->
  <view class="section">
    <text class="title">学期：</text>
    <picker mode="selector" range="{{semesters}}" bindchange="onSemesterChange">
      <view class="picker">{{semester}}</view>
    </picker>
  </view>

  <!-- 专业选择 -->
  <view class="section">
    <text class="title">专业：</text>
    <picker mode="selector" range="{{majors}}" bindchange="onMajorChange">
      <view class="picker">{{major}}</view>
    </picker>
  </view>

  <!-- 查询按钮 -->
  <button class="query-btn" bindtap="queryInfo">查询</button>

  <!-- 查询结果部分，初始隐藏，点击查询后显示 -->
  <view class="result" wx:if="{{showResult}}">
    <!-- 课程目标 -->
    <view class="section">
      <text class="title">课程目标：</text>
      <text class="content">{{courseGoal}}</text>
    </view>

    <!-- 课程内容 -->
    <view class="section">
      <text class="title">课程内容：</text>
      <text class="content">{{courseContent}}</text>
    </view>

    <!-- 教学方法 -->
    <view class="section">
      <text class="title">教学方法：</text>
      <text class="content">{{teachingMethod}}</text>
    </view>

    <!-- 教学进度 -->
    <view class="section">
      <text class="title">教学进度：</text>
      <text class="content">{{teachingSchedule}}</text>
    </view>

    <!-- 评估和考核 -->
    <view class="section">
      <text class="title">评估和考核：</text>
      <text class="content">{{assessment}}</text>
    </view>

    <!-- 学习要求 -->
    <view class="section">
      <text class="title">学习要求：</text>
      <text class="content">{{learningRequirements}}</text>
    </view>

    <!-- 课程结构 -->
    <view class="section">
      <text class="title">课程结构：</text>
      <text class="content">{{courseStructure}}</text>
    </view>

    <!-- 预期成果 -->
    <view class="section">
      <text class="title">预期成果：</text>
      <text class="content">{{expectedOutcomes}}</text>
    </view>

    <!-- 课程政策 -->
    <view class="section">
      <text class="title">课程政策：</text>
      <text class="content">{{coursePolicy}}</text>
    </view>

    <!-- 笔记区域 -->
    <view class="section">
      <text class="title">教师笔记：</text>
      <textarea class="content" placeholder="写下你的教学笔记..." bindinput="handleNotesInput" value="{{teacherNotes}}" />
    </view>

    <!-- 保存按钮 -->
    <button class="save-btn" bindtap="saveData">保存数据</button>
  </view>
</view>
