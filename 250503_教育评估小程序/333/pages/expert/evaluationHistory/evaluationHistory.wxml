<!--pages/expert/evaluationHistory/evaluationHistory.wxml-->
<view class="container">
  <view class="title">评估历史记录</view>
  <view class="description">
    专家可以查看历史评估记录，包括评估的校区、教室、课程、教师、打分、问题等详细信息。
  </view>

  <!-- 评估记录列表 -->
  <view class="evaluation-list">
    <block wx:for="{{evaluations}}" wx:key="id">
      <view class="evaluation-item">
        <view class="evaluation-course">课程: {{item.course}}</view>
        <view class="evaluation-teacher">教师: {{item.teacher}}</view>
        <view class="evaluation-profession">专业: {{item.profession}}</view>
        <view class="evaluation-campus">校区: {{item.campus}}</view>
        <view class="evaluation-classroom">教室: {{item.classroom}}</view>
        <view class="evaluation-score">打分: {{item.score}}</view>
        <view class="evaluation-issue">问题: {{item.issue}}</view>
      </view>
    </block>
  </view>
</view>
