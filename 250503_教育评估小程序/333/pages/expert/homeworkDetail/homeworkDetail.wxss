/* pages/teacher/homeworkDetail/homeworkDetail.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  flex-shrink: 0;
}

.subject {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.student {
  font-size: 28rpx;
  color: #666;
}

/* 修改内容区域样式 */
.content {
  flex: 1;
  margin: 20rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  height: 400rpx; /* 设置固定高度 */
}

.content-inner {
  white-space: pre-wrap;
  word-break: break-all;
}

.section-title {
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  font-size: 34rpx;
}

.attachments {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.attachment-item {
  margin-bottom: 15rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.file-info {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0;
  flex-shrink: 0;
}

.date {
  color: #666;
  font-size: 28rpx;
}