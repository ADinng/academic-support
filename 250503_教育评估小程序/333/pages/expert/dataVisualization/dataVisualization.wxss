/* pages/expert/dataVisualization/dataVisualization.wxss */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 16rpx;
  height: 100vh;
  overflow-y: scroll;
}

.chart-card {
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #333;
}

.chart {
  width: 100%;
  height: 400rpx;
}
