.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker-wrapper {
  margin-bottom: 20rpx;
  width: 100%;
}

.picker-item {
  padding: 15rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  font-size: 16px;
  text-align: center;
  background-color: #f9f9f9;
}

button {
  width: 80%;
  padding: 20rpx;
  background-color: #1aad19;
  color: white;
  margin: 30rpx 0;
  border-radius: 10rpx;
  font-size: 16px;
}

.homework-list {
  margin-top: 20rpx;
  width: 100%;
}

.homework-item {
  border-bottom: 1px solid #eee;
  padding: 25rpx;
  margin-bottom: 15rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.student-info {
  font-weight: bold;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.subject-info {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.date-info {
  font-size: 26rpx;
  color: #666;
  text-align: right;
}