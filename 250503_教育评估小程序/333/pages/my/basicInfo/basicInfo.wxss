.basic-info-container {
  padding: 20rpx;
  background-color: #fafafa;
}
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}
.info-label {
  font-size: 32rpx;
  color: #333;
}
.info-value {
  font-size: 32rpx;
  color: #666;
}    