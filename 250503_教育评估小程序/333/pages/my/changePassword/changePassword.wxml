<!--pages/my/changePassword/changePassword.wxml-->
<view class="modal-container">
    <view class="modal-content">
        <view class="modal-header">
            <text class="header-text">修改密码</text>
        </view>
        <view class="modal-body">
            <view class="input-item">
                <label class="input-label">请输入新密码</label>
                <input class="input-field" type="password" placeholder="请输入新密码" bindinput="handlePasswordInput"/>
            </view>
        </view>
        <view class="modal-footer">
            <button class="cancel-btn" bindtap="cancelChangePassword">取消</button>
            <button class="confirm-btn" bindtap="confirmChangePassword">确定</button>
        </view>
    </view>
</view>