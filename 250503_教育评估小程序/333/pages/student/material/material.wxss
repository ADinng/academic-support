/* pages/student/material/material.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
  width: 100%;
}

.subject-list {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.subject-item {
  background-color: rgb(255, 255, 255);
  margin: 10rpx 0;
  padding: 30rpx 300rpx; /* 调整左右内边距，避免文字被挤压 */
  border-radius: 8rpx;
  text-align: center;
  font-size: 36rpx;
  cursor: pointer;
  width: 100%;
  box-sizing: border-box;
  /* 确保文本水平排列（默认就是水平，显式声明可避免意外覆盖） */
  writing-mode: horizontal-tb; /* 默认值，文本水平排列 */
  white-space: nowrap; /* 防止文字换行（可选） */
}

.subject-item:hover {
  background-color: #f0f0f0;
}