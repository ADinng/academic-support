.container {
  padding: 30rpx;
  min-height: 10vh;
  background-color: #f5f5f5;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.copy-container {
  margin-top: 0rpx;
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.copy-button {
  width: 60%;
  padding: 20rpx;
  background-color: #07C160;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.description {
  padding: 30rpx;
  background-color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.8;
  margin-top: 50rpx;
  min-height: 700rpx;
  width: 100%;
  box-sizing: border-box;
}

.description text {
  color: #333;
  font-size: 28rpx;
  white-space: pre-wrap;
}    