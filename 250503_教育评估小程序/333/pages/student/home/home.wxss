
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 10rpx; /* 首页内容总体上移，减少内边距 */
}

.top-swiper {
  width: 100%;
  height: rpx;
  margin-top: 10rpx; /* 增加顶部外边距，使轮播图下移 */
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.function-modules {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 150rpx; /* 增加内边距，使白色底色框变高 */
  background-color: white;
  border-radius: 0rpx;
  margin-bottom: 50rpx;
}

.module-item {
  width: 30%;
  margin: 0rpx; /* 增加上下左右的外边距 */
  margin-bottom: 30rpx;
  text-align: center;
  display: flex; /* 启用弹性布局 */
  flex-direction: column; /* 垂直排列内容 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中，确保图标和文字在模块内上下居中 */
}

.module-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 30rpx;
}

.module-text {
  font-size: 25rpx;
}

.course-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: rpx;
}

.course-swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx; /* 底部导航框放大 */
  background-color: #f5f5f5;
  border-top: 1px solid #ccc;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 10rpx;
}

.nav-item text {
  font-size: 24rpx; /* 确保文字大小合适且未被隐藏 */
}

/* 整体页面背景色 */
page {
  background-color: #e3e3e3;
}

/* 搜索框样式 */
.search-box {
  background-color: white;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: -40rpx;
  width: 85%;
}

.search-box input {
  width: 100%;
  height: 20rpx;
  border: none;
  outline: none;
}

/* 轮播图模块样式 */
.swiper-module {
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  margin-top: 0rpx; /* 增加顶部外边距，使轮播图下移 */
}

.swiper-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

/* 功能模块样式 */
.function-modules {
  background-color: white;
  padding: 100rpx;
  border-radius: 0rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.module-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.module-text {
  font-size: 24rpx;
}

/* 课程轮播图模块样式 */
.course-swiper-module {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.course-swiper {
  width: 100%;
  height: 550rpx;
}

.course-swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  background-color: #ffffff;
  border-top: 1px solid rgba(109, 83, 83, 0.3);
}

.swiper-page-info {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}

