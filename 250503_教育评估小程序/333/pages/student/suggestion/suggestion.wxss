/* 页面容器样式 */
.container {
  padding: 20px;
  background-color: #f9f9f9;
}

/* 页面标题 */
.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
}

/* 输入框样式 */
.suggestion-input {
  width: 100%;
  height: 150px;
  border: 1px solid #ccc;
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  background-color: #fff;
  margin-bottom: 20px;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  padding: 12px;
  background-color: #ff5722;
  color: white;
  font-size: 16px;
  border-radius: 5px;
  text-align: center;
}
